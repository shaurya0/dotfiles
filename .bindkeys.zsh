# ctrl+b/f or ctrl+left/right : move word by word (backward/forward)
bindkey '^[j' backward-word
bindkey '^[l' forward-word

bindkey '^[k' backward-delete-char
bindkey '^h' delete-char-or-list
bindkey '^kk' kill-line

bindkey "^[u" backward-char
bindkey "^[o" forward-char

bindkey "^[n" beginning-of-line
bindkey "^[m" end-of-line

bindkey "^[K" backward-kill-word
bindkey "^H" kill-word



